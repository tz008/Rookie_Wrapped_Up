<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:shape="rectangle"
    tools:context=".MainActivity">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <!--头部-->
        <LinearLayout
            android:id="@+id/layout_top_02"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:orientation="horizontal">
            <ImageView
                android:id="@+id/mail_page_return"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@drawable/left_arrow"/>
            <TextView
                android:layout_width="150dp"
                android:layout_height="30dp"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="15dp"
                android:textSize="25dp"
                android:text="菜鸟裹裹..."/>
            <ImageView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginLeft="130dp"
                android:src="@drawable/ellipsis"/>

        </LinearLayout>


        <!--导航栏-->
        <LinearLayout
            android:id="@+id/navigation_bar_02"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">
            <HorizontalScrollView
                android:layout_width="280dp"
                android:layout_height="wrap_content"
                android:layout_margin="5dp" >
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="fill_parent"
                    android:layout_margin="10dp" >
                    <ScrollView
                        android:layout_width="510dp"
                        android:layout_height="20dp">
                        <HorizontalScrollView
                            android:layout_width="match_parent"
                            android:layout_height="20dp">
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:gravity="center_vertical"
                                android:orientation="horizontal">
                                <TextView
                                    android:layout_width="75dp"
                                    android:layout_height="50dp"
                                    android:layout_marginLeft="10dp"
                                    android:layout_gravity="center"
                                    android:textColor="#00AAFD"
                                    android:text="我要寄件"/>
                                <TextView
                                    android:id="@+id/mail_page_out2"
                                    android:layout_width="75dp"
                                    android:layout_height="50dp"
                                    android:layout_marginLeft="10dp"
                                    android:layout_gravity="center"
                                    android:text="我要退货"/>
                                <TextView
                                    android:layout_width="75dp"
                                    android:layout_height="50dp"
                                    android:layout_marginLeft="10dp"
                                    android:layout_gravity="center"
                                    android:text="批量寄件"/>
                                <TextView
                                    android:layout_width="75dp"
                                    android:layout_height="50dp"
                                    android:layout_marginLeft="10dp"
                                    android:layout_gravity="center"
                                    android:text="国际港澳台"/>
                                <TextView
                                    android:layout_width="75dp"
                                    android:layout_height="50dp"
                                    android:layout_marginLeft="10dp"
                                    android:layout_gravity="center"
                                    android:text="公益寄件"/>
                                <TextView
                                    android:layout_width="75dp"
                                    android:layout_height="50dp"
                                    android:layout_marginLeft="10dp"
                                    android:layout_gravity="center"
                                    android:text="货运搬家"/>
                            </LinearLayout>
                        </HorizontalScrollView>
                    </ScrollView>
                </LinearLayout>
            </HorizontalScrollView>

            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginTop="5dp"
                android:layout_marginLeft="5dp"
                android:src="@drawable/navigation">
            </ImageView>

            <Button
                android:layout_width="60dp"
                android:layout_height="40dp"
                android:layout_marginTop="5dp"
                android:layout_marginLeft="5dp"
                android:text="订单">
            </Button>
        </LinearLayout>

        <!--个人信息-->
        <LinearLayout
            android:id="@+id/personal_information_02"
            android:layout_width="match_parent"
            android:layout_height="180dp"
            android:layout_marginTop="10dp"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:orientation="horizontal">
                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_marginTop="20dp"
                    android:layout_marginLeft="10dp"
                    android:src="@drawable/jijian"/>
                <LinearLayout
                    android:layout_width="300dp"
                    android:layout_height="80dp"
                    android:orientation="vertical">
                    <LinearLayout
                        android:layout_width="300dp"
                        android:layout_height="40dp"
                        android:orientation="horizontal">
                        <TextView
                            android:id="@+id/mailpage_name_02"
                            android:layout_width="50dp"
                            android:layout_height="30dp"
                            android:layout_marginLeft="15dp"
                            android:textSize="20sp"
                            android:textColor="#000000"/>
                        <TextView
                            android:id="@+id/mailpage_phone_02"
                            android:layout_width="150dp"
                            android:layout_height="30dp"
                            android:layout_marginLeft="15dp"
                            android:textSize="18sp"
                           />
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="250dp"
                        android:layout_height="40dp"
                        android:orientation="vertical">
                        <TextView
                            android:id="@+id/mailpage_address01_02"
                            android:layout_width="300dp"
                            android:layout_height="20dp"
                            android:layout_marginLeft="15dp"
                            android:textSize="12sp"
                           />
                        <TextView
                            android:id="@+id/mailpage_address02_02"
                            android:layout_width="300dp"
                            android:layout_height="20dp"
                            android:layout_marginLeft="15dp"
                            android:textSize="12sp"
                         />
                    </LinearLayout>

                </LinearLayout>
                <TextView
                    android:id="@+id/jump_dzp01"
                    android:layout_width="50dp"
                    android:layout_height="30dp"
                    android:layout_marginTop="25dp"
                    android:textSize="15sp"
                    android:text="地址簿"
                    android:textColor="#000000"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:layout_marginTop="20dp"
                android:orientation="horizontal">
                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_marginTop="20dp"
                    android:layout_marginLeft="10dp"
                    android:src="@drawable/shoujian"/>
                <LinearLayout
                    android:layout_width="300dp"
                    android:layout_height="80dp"
                    android:orientation="vertical">
                    <LinearLayout
                        android:layout_width="300dp"
                        android:layout_height="40dp"
                        android:orientation="horizontal">
                        <TextView
                            android:layout_width="300dp"
                            android:layout_height="40dp"
                            android:layout_marginLeft="15dp"
                            android:textSize="20sp"
                            android:text="请填写收件人信息?"
                            android:textColor="#000000"/>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="250dp"
                        android:layout_height="40dp"
                        android:orientation="vertical">
                        <TextView
                            android:layout_width="300dp"
                            android:layout_height="40dp"
                            android:layout_marginLeft="15dp"
                            android:textSize="18sp"
                            android:text="支持智能填写,文本导入、图片识别"/>
                    </LinearLayout>
                </LinearLayout>
                <TextView
                    android:id="@+id/jump_dzp02"
                    android:layout_width="50dp"
                    android:layout_height="30dp"
                    android:layout_marginTop="25dp"
                    android:textSize="15sp"
                    android:text="地址簿"
                    android:textColor="#000000"/>
            </LinearLayout>
        </LinearLayout>


        <!--选择服务-->
        <LinearLayout
            android:id="@+id/service_02"
            android:layout_width="match_parent"
            android:layout_height="280dp"
            android:layout_marginTop="10dp"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:orientation="horizontal">
                <Button
                    android:id="@+id/btn_smqj"
                    android:layout_width="200dp"
                    android:layout_height="40dp"
                    android:background="#E7EBF7"
                    android:text="上门取件"
                    android:textSize="18dp">
                </Button>
                <Button
                    android:id="@+id/btn_qfwdj"
                    android:layout_width="200dp"
                    android:layout_height="40dp"
                    android:background="#ffffff"
                    android:layout_marginLeft="10dp"
                    android:text="去服务店寄"
                    android:textSize="18dp">
                </Button>
            </LinearLayout>



            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:background="#ffffff"
                android:orientation="horizontal">
                <LinearLayout
                    android:layout_width="300dp"
                    android:layout_height="70dp"
                    android:background="#ffffff"
                    android:orientation="vertical">
                    <TextView
                        android:layout_width="300dp"
                        android:layout_height="30dp"
                        android:layout_marginLeft="20dp"
                        android:layout_marginTop="10dp"
                        android:text="菜鸟驿站-重庆理工大学两江校区西门"
                        android:textSize="16sp"
                        android:textColor="#000000"
                        android:gravity="center_vertical|left"/>
                    <TextView
                        android:layout_width="300dp"
                        android:layout_height="20dp"
                        android:layout_marginTop="10dp"
                        android:layout_marginLeft="20dp"
                        android:text="214米|重庆重庆市渝北区龙兴镇怡园支路65号"
                        android:gravity="center_vertical|left"/>
                </LinearLayout>
                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/yjt"
                    android:layout_marginLeft="80dp"
                    android:layout_marginTop="25dp"/>
            </LinearLayout>
            <View
                android:layout_width="fill_parent"
                android:layout_height="1dp"
                android:background="#E7EBF7"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="#ffffff"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="100dp"
                    android:layout_height="30dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="20dp"
                    android:text="物品信息"
                    android:gravity="center_vertical|left"/>
                <Spinner
                    android:layout_width="150dp"
                    android:layout_height="30dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="140dp"
                    android:gravity="center_vertical|right"
                    android:entries="@array/type"
                    android:spinnerMode="dropdown">
                </Spinner>

                <!--                <TextView-->
<!--                    android:layout_width="130dp"-->
<!--                    android:layout_height="30dp"-->
<!--                    android:layout_marginTop="10dp"-->
<!--                    android:layout_marginLeft="120dp"-->
<!--                    android:text="日用品/1kg"-->
<!--                    android:textColor="#000000"-->
<!--                    android:gravity="center_vertical|right"/>-->
<!--                <ImageView-->
<!--                    android:layout_width="20dp"-->
<!--                    android:layout_height="20dp"-->
<!--                    android:src="@drawable/yjt"-->
<!--                    android:layout_marginLeft="10dp"-->
<!--                    android:layout_marginTop="15dp"/>-->
            </LinearLayout>
            <View
                android:layout_width="fill_parent"
                android:layout_height="1dp"
                android:background="#E7EBF7"/>


            <LinearLayout
                android:layout_width="382dp"
                android:layout_height="82dp"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="20dp"
                android:orientation="horizontal">
                <View
                    android:layout_width="1dp"
                    android:layout_height="fill_parent"
                    android:background="#E7EBF7"/>
                <LinearLayout
                    android:layout_width="380dp"
                    android:layout_height="132dp"
                    android:orientation="vertical">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="30dp"
                        android:background="#E7EBF7">
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="30dp"
                            android:text="菜鸟裹裹独家为您提供"
                            android:gravity="center_vertical"
                            android:layout_marginLeft="15dp"/>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:orientation="horizontal">
                        <ImageView
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:layout_marginLeft="15dp"
                            android:layout_marginTop="10dp"
                            android:src="@drawable/baoguo"/>
                        <TextView
                            android:layout_width="80dp"
                            android:layout_height="30dp"
                            android:text="免费包装"
                            android:textSize="18sp"
                            android:textColor="#24A3FF"
                            android:gravity="center_vertical"
                            android:layout_marginTop="10dp"/>
                        <TextView
                            android:layout_width="150dp"
                            android:layout_height="30dp"
                            android:text="免费提供回收利用的包材"
                            android:textSize="12sp"
                            android:gravity="center_vertical"
                            android:layout_marginTop="10dp"
                            android:layout_marginLeft="100dp"/>
                    </LinearLayout>
                    <View
                        android:layout_width="fill_parent"
                        android:layout_height="1dp"
                        android:background="#E7EBF7"/>
                </LinearLayout>

                <View
                    android:layout_width="1dp"
                    android:layout_height="fill_parent"
                    android:background="#E7EBF7"/>

            </LinearLayout>
        </LinearLayout>



        <!--邮费-->
        <LinearLayout
            android:id="@+id/postage_02"
            android:layout_width="match_parent"
            android:layout_height="145dp"
            android:layout_marginTop="10dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:background="#E7EBF7"
                android:orientation="horizontal">
                <RadioButton
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_marginTop="20dp"
                    android:layout_marginLeft="20dp">
                </RadioButton>
                <TextView
                    android:layout_width="100dp"
                    android:layout_height="30dp"
                    android:layout_marginTop="20dp"
                    android:text="我已阅读并同意"/>
                <TextView
                    android:layout_width="100dp"
                    android:layout_height="30dp"
                    android:layout_marginTop="20dp"
                    android:text="《服务协议》"
                    android:textSize="15dp"
                    android:textColor="#24A3FF"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:layout_marginTop="5dp"
                android:orientation="horizontal">
                <LinearLayout
                    android:layout_width="250dp"
                    android:layout_height="70dp"
                    android:orientation="vertical">
                    <LinearLayout
                        android:layout_width="300dp"
                        android:layout_height="35dp"
                        android:orientation="horizontal">
                        <TextView
                            android:layout_width="70dp"
                            android:layout_height="30dp"
                            android:layout_marginLeft="15dp"
                            android:text="预估费用"
                            android:textSize="15dp"
                            android:textColor="#000000"/>
                        <TextView
                            android:layout_width="100dp"
                            android:layout_height="30dp"
                            android:text="￥-"
                            android:textSize="18dp"
                            android:textColor="#F74F09"/>
                    </LinearLayout>
                    <TextView
                        android:layout_width="180dp"
                        android:layout_height="30dp"
                        android:layout_marginLeft="15dp"
                        android:text="根据收寄件地址估算费用" />
                </LinearLayout>

                <Button
                    android:layout_width="150dp"
                    android:layout_height="50dp"
                    android:layout_marginTop="10dp"
                    android:background="@xml/btn_style"
                    android:textSize="18sp"
                    android:text="立即下单">
                </Button>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</ScrollView >
