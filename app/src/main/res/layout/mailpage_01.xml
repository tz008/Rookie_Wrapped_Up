<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:shape="rectangle"
    tools:context=".MainActivity">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <!--头部-->
        <LinearLayout
            android:id="@+id/layout_top_01"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:orientation="horizontal">
            <ImageView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@drawable/left_arrow"/>
            <TextView
                android:layout_width="150dp"
                android:layout_height="30dp"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="15dp"
                android:textSize="25dp"
                android:text="菜鸟裹裹..."/>
            <ImageView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginLeft="130dp"
                android:src="@drawable/ellipsis"/>

        </LinearLayout>


        <!--导航栏-->
        <LinearLayout
            android:id="@+id/navigation_bar_01"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">
            <HorizontalScrollView
                android:layout_width="280dp"
                android:layout_height="wrap_content"
                android:layout_margin="5dp" >
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="fill_parent"
                    android:layout_margin="10dp" >
                    <GridView
                        android:id="@+id/grid"
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:gravity="center"
                        android:numColumns="auto_fit"
                        android:stretchMode="spacingWidthUniform" >
                    </GridView>
                </LinearLayout>
            </HorizontalScrollView>

            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginTop="5dp"
                android:layout_marginLeft="5dp"
                android:src="@drawable/navigation">
            </ImageView>

            <Button
                android:layout_width="60dp"
                android:layout_height="40dp"
                android:layout_marginTop="5dp"
                android:layout_marginLeft="5dp"
                android:text="订单">
            </Button>
        </LinearLayout>

        <!--个人信息-->
        <LinearLayout
            android:id="@+id/personal_information_01"
            android:layout_width="match_parent"
            android:layout_height="180dp"
            android:layout_marginTop="10dp"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:orientation="horizontal">
                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_marginTop="20dp"
                    android:layout_marginLeft="10dp"
                    android:src="@drawable/jijian"/>
                <LinearLayout
                    android:layout_width="300dp"
                    android:layout_height="80dp"
                    android:orientation="vertical">
                    <LinearLayout
                        android:layout_width="300dp"
                        android:layout_height="40dp"
                        android:orientation="horizontal">
                        <TextView
                            android:id="@+id/mailpage_name"
                            android:layout_width="50dp"
                            android:layout_height="30dp"
                            android:layout_marginLeft="15dp"
                            android:textSize="20sp"

                            android:textColor="#000000"/>
                        <TextView
                            android:id="@+id/mailpage_phone"
                            android:layout_width="150dp"
                            android:layout_height="30dp"
                            android:layout_marginLeft="15dp"
                            android:textSize="18sp"
                             />
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="250dp"
                        android:layout_height="40dp"
                        android:orientation="vertical">
                        <TextView
                            android:id="@+id/mailpage_address01"
                            android:layout_width="300dp"
                            android:layout_height="20dp"
                            android:layout_marginLeft="15dp"
                            android:textSize="12sp"
                         />
                        <TextView
                            android:id="@+id/mailpage_address02"
                            android:layout_width="300dp"
                            android:layout_height="20dp"
                            android:layout_marginLeft="15dp"
                            android:textSize="12sp"
                          />
                    </LinearLayout>

                </LinearLayout>
                <TextView
                    android:layout_width="50dp"
                    android:layout_height="30dp"
                    android:layout_marginTop="25dp"
                    android:textSize="15sp"
                    android:text="地址簿"
                    android:textColor="#000000"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:layout_marginTop="20dp"
                android:orientation="horizontal">
                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_marginTop="20dp"
                    android:layout_marginLeft="10dp"
                    android:src="@drawable/shoujian"/>
                <LinearLayout
                    android:layout_width="300dp"
                    android:layout_height="80dp"
                    android:orientation="vertical">
                    <LinearLayout
                        android:layout_width="300dp"
                        android:layout_height="40dp"
                        android:orientation="horizontal">
                        <TextView
                            android:layout_width="300dp"
                            android:layout_height="40dp"
                            android:layout_marginLeft="15dp"
                            android:textSize="20sp"
                            android:text="请填写收件人信息?"
                            android:textColor="#000000"/>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="250dp"
                        android:layout_height="40dp"
                        android:orientation="vertical">
                        <TextView
                            android:layout_width="300dp"
                            android:layout_height="40dp"
                            android:layout_marginLeft="15dp"
                            android:textSize="18sp"
                            android:text="支持智能填写,文本导入、图片识别"/>
                    </LinearLayout>
                </LinearLayout>
                <TextView
                    android:layout_width="50dp"
                    android:layout_height="30dp"
                    android:layout_marginTop="25dp"
                    android:textSize="15sp"
                    android:text="地址簿"
                    android:textColor="#000000"/>
            </LinearLayout>
        </LinearLayout>


        <!--选择服务-->
        <LinearLayout
            android:id="@+id/service_01"
            android:layout_width="match_parent"
            android:layout_height="350dp"
            android:layout_marginTop="10dp"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:orientation="horizontal">
                <Button
                    android:id="@+id/btn_smqj"
                    android:layout_width="200dp"
                    android:layout_height="40dp"
                    android:background="#ffffff"
                    android:text="上门取件"
                    android:textSize="18dp">
                </Button>
                <Button
                    android:id="@+id/btn_qfwdj"
                    android:layout_width="200dp"
                    android:layout_height="40dp"
                    android:background="#E7EBF7"
                    android:layout_marginLeft="10dp"
                    android:text="去服务店寄"
                    android:textSize="18dp">
                </Button>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="#ffffff"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="100dp"
                    android:layout_height="30dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="20dp"
                    android:text="快递选择"
                    android:gravity="center_vertical|left"/>
                <TextView
                    android:layout_width="120dp"
                    android:layout_height="30dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="130dp"
                    android:text="菜鸟官方上门服务"
                    android:textColor="#000000"
                    android:gravity="center_vertical|right"/>
                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/yjt"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="15dp"/>
            </LinearLayout>
            <View
                android:layout_width="fill_parent"
                android:layout_height="1dp"
                android:background="#E7EBF7"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="#ffffff"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="100dp"
                    android:layout_height="30dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="20dp"
                    android:text="上门时间"
                    android:gravity="center_vertical|left"/>
                <TextView
                    android:layout_width="130dp"
                    android:layout_height="30dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="120dp"
                    android:text="请选择期望上门时间"
                    android:textColor="#000000"
                    android:gravity="center_vertical|right"/>
                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/yjt"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="15dp"/>
            </LinearLayout>
            <View
                android:layout_width="fill_parent"
                android:layout_height="1dp"
                android:background="#E7EBF7"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="#ffffff"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="100dp"
                    android:layout_height="30dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="20dp"
                    android:text="物品信息"
                    android:gravity="center_vertical|left"/>
                <TextView
                    android:layout_width="120dp"
                    android:layout_height="30dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="130dp"
                    android:text="日用品/1kg"
                    android:textColor="#000000"
                    android:gravity="center_vertical|right"/>
                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/yjt"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="15dp"/>
            </LinearLayout>
            <View
                android:layout_width="fill_parent"
                android:layout_height="1dp"
                android:background="#E7EBF7"/>


            <LinearLayout
                android:layout_width="382dp"
                android:layout_height="132dp"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="20dp"
                android:orientation="horizontal">
                <View
                    android:layout_width="1dp"
                    android:layout_height="fill_parent"
                    android:background="#E7EBF7"/>
                <LinearLayout
                    android:layout_width="380dp"
                    android:layout_height="132dp"
                    android:orientation="vertical">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="30dp"
                        android:background="#E7EBF7">
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="30dp"
                            android:text="菜鸟裹裹独家为您提供"
                            android:gravity="center_vertical"
                            android:layout_marginLeft="15dp"/>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:orientation="horizontal">
                        <ImageView
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:layout_marginLeft="15dp"
                            android:layout_marginTop="10dp"
                            android:src="@drawable/suo"/>
                        <TextView
                            android:layout_width="60dp"
                            android:layout_height="30dp"
                            android:text="隐私寄"
                            android:textColor="#24A3FF"
                            android:textSize="18sp"
                            android:gravity="center_vertical"
                            android:layout_marginTop="10dp"/>
                        <ImageView
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:layout_marginTop="15dp"
                            android:src="@drawable/wenhao"/>
                        <TextView
                            android:layout_width="150dp"
                            android:layout_height="30dp"
                            android:text="快递单电话、地址信息加密"
                            android:textSize="12sp"
                            android:gravity="center_vertical"
                            android:layout_marginTop="10dp"
                            android:layout_marginLeft="40dp"/>
                        <Switch
                            android:layout_width="50dp"
                            android:layout_height="30dp"
                            android:layout_marginTop="10dp"/>
                    </LinearLayout>
                    <View
                        android:layout_width="fill_parent"
                        android:layout_height="1dp"
                        android:background="#E7EBF7"/>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:orientation="horizontal">
                        <ImageView
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:layout_marginLeft="15dp"
                            android:layout_marginTop="10dp"
                            android:src="@drawable/suo"/>
                        <TextView
                            android:layout_width="120dp"
                            android:layout_height="30dp"
                            android:text="放心寄,丢必赔"
                            android:textSize="18sp"
                            android:textColor="#24A3FF"
                            android:gravity="center_vertical"
                            android:layout_marginTop="10dp"/>
                        <ImageView
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:layout_marginTop="15dp"
                            android:src="@drawable/wenhao"/>
                        <TextView
                            android:layout_width="100dp"
                            android:layout_height="30dp"
                            android:text="千元内免保价"
                            android:textSize="12sp"
                            android:gravity="center_vertical|right"
                            android:layout_marginTop="10dp"
                            android:layout_marginLeft="40dp"/>
                        <ImageView
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:src="@drawable/yjt"
                            android:layout_marginLeft="10dp"
                            android:layout_marginTop="15dp"/>
                    </LinearLayout>
                    <View
                        android:layout_width="fill_parent"
                        android:layout_height="1dp"
                        android:background="#E7EBF7"/>
                </LinearLayout>

                <View
                    android:layout_width="1dp"
                    android:layout_height="fill_parent"
                    android:background="#E7EBF7"/>

            </LinearLayout>
        </LinearLayout>



        <!--邮费-->
        <LinearLayout
            android:id="@+id/postage_01"
            android:layout_width="match_parent"
            android:layout_height="145dp"
            android:layout_marginTop="10dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:background="#E7EBF7"
                android:orientation="horizontal">
                <RadioButton
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_marginTop="20dp"
                    android:layout_marginLeft="20dp">
                </RadioButton>
                <TextView
                    android:layout_width="100dp"
                    android:layout_height="30dp"
                    android:layout_marginTop="20dp"
                    android:text="我已阅读并同意"/>
                <TextView
                    android:layout_width="100dp"
                    android:layout_height="30dp"
                    android:layout_marginTop="20dp"
                    android:text="《服务协议》"
                    android:textSize="15dp"
                    android:textColor="#24A3FF"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:layout_marginTop="5dp"
                android:orientation="horizontal">
                <LinearLayout
                    android:layout_width="250dp"
                    android:layout_height="70dp"
                    android:orientation="vertical">
                    <LinearLayout
                        android:layout_width="300dp"
                        android:layout_height="35dp"
                        android:orientation="horizontal">
                        <TextView
                            android:layout_width="70dp"
                            android:layout_height="30dp"
                            android:layout_marginLeft="15dp"
                            android:text="预估费用"
                            android:textSize="15dp"
                            android:textColor="#000000"/>
                        <TextView
                            android:layout_width="100dp"
                            android:layout_height="30dp"
                            android:text="￥-"
                            android:textSize="18dp"
                            android:textColor="#F74F09"/>
                    </LinearLayout>
                    <TextView
                        android:layout_width="180dp"
                        android:layout_height="30dp"
                        android:layout_marginLeft="15dp"
                        android:text="根据收寄件地址估算费用" />
                </LinearLayout>

                <Button
                    android:layout_width="150dp"
                    android:layout_height="50dp"
                    android:layout_marginTop="10dp"
                    android:background="@xml/btn_style"
                    android:textSize="18sp"
                    android:text="立即下单">
                </Button>

            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</ScrollView >
