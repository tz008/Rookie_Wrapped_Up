    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        app:layout_constraintTop_toTopOf="@+id/top_pick_up"
        app:layout_constraintBottom_toBottomOf="@+id/bottom_pick_up"
        android:background="#ffffff">

        <androidx.constraintlayout.widget.ConstraintLayout

            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <androidx.constraintlayout.widget.Guideline
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/left_pick_up1"
                app:layout_constraintGuide_percent=".07"
                android:orientation="vertical"/>

            <androidx.constraintlayout.widget.Guideline
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/right_pick_up1"
                app:layout_constraintGuide_percent=".17"
                android:orientation="vertical"/>

            <androidx.constraintlayout.widget.Guideline
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/left_pick_up2"
                app:layout_constraintGuide_percent=".24"
                android:orientation="vertical"/>

            <androidx.constraintlayout.widget.Guideline
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/right_pick_up2"
                app:layout_constraintGuide_percent=".34"
                android:orientation="vertical"/>

            <androidx.constraintlayout.widget.Guideline
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/left_pick_up3"
                app:layout_constraintGuide_percent=".41"
                android:orientation="vertical"/>

            <androidx.constraintlayout.widget.Guideline
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/right_pick_up3"
                app:layout_constraintGuide_percent=".61"
                android:orientation="vertical"/>

            <androidx.constraintlayout.widget.Guideline
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/left_pick_up4"
                app:layout_constraintGuide_percent=".68"
                android:orientation="vertical"/>

            <androidx.constraintlayout.widget.Guideline
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/right_pick_up4"
                app:layout_constraintGuide_percent=".80"
                android:orientation="vertical"/>

            <androidx.constraintlayout.widget.Guideline
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/left_pick_up5"
                app:layout_constraintGuide_percent=".87"
                android:orientation="vertical"/>

            <androidx.constraintlayout.widget.Guideline
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/right_pick_up5"
                app:layout_constraintGuide_percent=".97"
                android:orientation="vertical"/>

            <!--                首页-->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                app:layout_constraintLeft_toLeftOf="@+id/left_pick_up1"
                app:layout_constraintRight_toRightOf="@+id/right_pick_up1"
                android:orientation = "vertical"
                >
                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/pick_up_home_page"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="-10dp"
                    android:gravity="center"
                    android:text="首页" />

            </LinearLayout>

            <!--                取件-->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                app:layout_constraintLeft_toLeftOf="@+id/left_pick_up2"
                app:layout_constraintRight_toRightOf="@+id/right_pick_up2"
                android:orientation = "vertical"
                >
                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/pick_up_pick_up"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="-10dp"
                    android:gravity="center"
                    android:text="取件" />

            </LinearLayout>

            <!--                寄件-->
            <LinearLayout
                android:id="@+id/pick_up_mailPage"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                app:layout_constraintLeft_toLeftOf="@+id/left_pick_up3"
                app:layout_constraintRight_toRightOf="@+id/right_pick_up3"
                android:orientation = "vertical"
                >
                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/pick_up_mail"/>

            </LinearLayout>

            <!--                裹裹购-->
            <LinearLayout
                android:id="@+id/pick_up_shop"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                app:layout_constraintLeft_toLeftOf="@+id/left_pick_up4"
                app:layout_constraintRight_toRightOf="@+id/right_pick_up4"
                android:orientation = "vertical"
                >
                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/pick_up_shopping"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="-10dp"
                    android:gravity="center"
                    android:text="裹裹购" />

            </LinearLayout>

            <!--                我的-->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                app:layout_constraintLeft_toLeftOf="@+id/left_pick_up5"
                app:layout_constraintRight_toRightOf="@+id/right_pick_up5"
                android:orientation = "vertical"
                >
                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/pick_up_me"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="-10dp"
                    android:gravity="center"
                    android:textColor="#24A4FF"
                    android:text="我的" />

            </LinearLayout>

        </androidx.constraintlayout.widget.ConstraintLayout>
    </LinearLayout>
</LinearLayout>