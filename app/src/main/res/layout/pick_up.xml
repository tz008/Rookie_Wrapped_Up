<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#EBF3FF">

    <androidx.constraintlayout.widget.ConstraintLayout

        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.constraintlayout.widget.Guideline
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/left_guideline"
            app:layout_constraintGuide_percent=".15"
            android:orientation="vertical"/>

        <androidx.constraintlayout.widget.Guideline
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/right_guideline"
            app:layout_constraintGuide_percent=".65"
            android:orientation="vertical"/>

        <androidx.constraintlayout.widget.Guideline
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/top_guideline"
            app:layout_constraintGuide_percent=".10"
            android:orientation="horizontal"/>

        <androidx.constraintlayout.widget.Guideline
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/bottom_guideline"
            app:layout_constraintGuide_percent=".10"
            android:orientation="horizontal"/>

        <androidx.constraintlayout.widget.Guideline
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/bottom_guideline2"
            app:layout_constraintGuide_percent=".52"
            android:orientation="horizontal"/>

        <androidx.constraintlayout.widget.Guideline
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/top_guideline3"
            app:layout_constraintGuide_percent=".51"
            android:orientation="horizontal"/>

        <androidx.constraintlayout.widget.Guideline
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/bottom_guideline3"
            app:layout_constraintGuide_percent=".90"
            android:orientation="horizontal"/>

        <androidx.constraintlayout.widget.Guideline
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/top_pick_up"
            app:layout_constraintGuide_percent=".89"
            android:orientation="horizontal"/>

        <androidx.constraintlayout.widget.Guideline
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/bottom_pick_up"
            app:layout_constraintGuide_percent=".999"
            android:orientation="horizontal"/>



<!--                    app:layout_constraintLeft_toLeftOf="@+id/left_guideline"-->
<!--                    app:layout_constraintRight_toRightOf="@+id/right_guideline"-->
        <!--            app:layout_constraintTop_toTopOf="@+id/top_guideline"-->
        <!--            app:layout_constraintBottom_toBottomOf="@+id/bottom_guideline" -->

        !--    title-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layout_constraintBottom_toBottomOf="@+id/bottom_guideline" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="暂无待取包裹"
                android:textSize="23sp"
                android:textColor="#002240"
                android:layout_marginLeft="20dp"/>
        </LinearLayout>

        <!--    裹裹亲友-->

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="10dp"
            app:layout_constraintTop_toTopOf="@+id/top_guideline"
            app:layout_constraintBottom_toBottomOf="@+id/bottom_guideline2"
            android:background="@drawable/pick_up_arc"
            android:orientation="vertical">



<!--            title-->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="添加裹裹亲友，互相查询包裹"
                android:textColor="#002240"
                android:textSize="16sp"
                android:gravity="center"
                android:layout_marginTop="10dp"/>

            <androidx.constraintlayout.widget.ConstraintLayout

                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <androidx.constraintlayout.widget.Guideline
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/top_guideline7"
                    app:layout_constraintGuide_percent=".00"
                    android:orientation="horizontal"/>

                <androidx.constraintlayout.widget.Guideline
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/bottom_guideline7"
                    app:layout_constraintGuide_percent=".65"
                    android:orientation="horizontal"/>

                <androidx.constraintlayout.widget.Guideline
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/top_guideline8"
                    app:layout_constraintGuide_percent=".6"
                    android:orientation="horizontal"/>

                <androidx.constraintlayout.widget.Guideline
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/bottom_guideline8"
                    app:layout_constraintGuide_percent=".85"
                    android:orientation="horizontal"/>

                <androidx.constraintlayout.widget.Guideline
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/top_guideline9"
                    app:layout_constraintGuide_percent=".85"
                    android:orientation="horizontal"/>

                <androidx.constraintlayout.widget.Guideline
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/bottom_guideline9"
                    app:layout_constraintGuide_percent=".99"
                    android:orientation="horizontal"/>

                <androidx.constraintlayout.widget.Guideline
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/left_guideline2"
                    app:layout_constraintGuide_percent=".38"
                    android:orientation="vertical"/>

                <androidx.constraintlayout.widget.Guideline
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/right_guideline2"
                    app:layout_constraintGuide_percent=".99"
                    android:orientation="vertical"/>


<!--            图片-->
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:src="@mipmap/pick_up_add_friend"
                android:layout_marginTop="10dp"
                app:layout_constraintTop_toTopOf="@+id/top_guideline7"
                app:layout_constraintBottom_toBottomOf="@+id/bottom_guideline7"
                />

<!--                亲友头像-->
                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:src="@mipmap/pick_up_add"
                    app:layout_constraintTop_toTopOf="@+id/top_guideline8"
                    app:layout_constraintBottom_toBottomOf="@+id/bottom_guideline8"
                    />

<!--                头像下的文字-->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:orientation = "horizontal"
                    app:layout_constraintLeft_toLeftOf="@+id/left_guideline2"
                    app:layout_constraintRight_toRightOf="@+id/right_guideline2"
                    app:layout_constraintTop_toTopOf="@+id/top_guideline9"
                    app:layout_constraintBottom_toBottomOf="@+id/bottom_guideline9">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="我"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="40dp"
                        android:textColor="#1091ED"
                        android:text="添加亲友"/>
                </LinearLayout>

            </androidx.constraintlayout.widget.ConstraintLayout>

        </LinearLayout>

        <!--            我的站点-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="5dp"
            app:layout_constraintTop_toTopOf="@+id/top_guideline3"
            app:layout_constraintBottom_toBottomOf="@+id/bottom_guideline3"
            android:orientation="vertical">
            <!--     我的站点   title-->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:textSize="15sp"
                android:textColor="#002240"
                android:text="我的站点"/>

            <androidx.constraintlayout.widget.ConstraintLayout

                android:layout_width="match_parent"
                android:layout_height="match_parent">


                <androidx.constraintlayout.widget.Guideline
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/top_guideline4"
                    app:layout_constraintGuide_percent=".0"
                    android:orientation="horizontal"/>

                <androidx.constraintlayout.widget.Guideline
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/bottom_guideline4"
                    app:layout_constraintGuide_percent=".36"
                    android:orientation="horizontal"/>

                <androidx.constraintlayout.widget.Guideline
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/top_guideline5"
                    app:layout_constraintGuide_percent=".36"
                    android:orientation="horizontal"/>

                <androidx.constraintlayout.widget.Guideline
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/bottom_guideline5"
                    app:layout_constraintGuide_percent=".70"
                    android:orientation="horizontal"/>

                <androidx.constraintlayout.widget.Guideline
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/top_guideline6"
                    app:layout_constraintGuide_percent=".70"
                    android:orientation="horizontal"/>

                <androidx.constraintlayout.widget.Guideline
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/bottom_guideline6"
                    app:layout_constraintGuide_percent=".99"
                    android:orientation="horizontal"/>
                <!--        站点-->
                <LinearLayout
                    android:layout_marginTop="5dp"
                    android:paddingLeft="10dp"
                    android:layout_width="match_parent"
                    android:orientation="vertical"
                    android:layout_height="0dp"
                    app:layout_constraintTop_toTopOf="@+id/top_guideline4"
                    app:layout_constraintBottom_toBottomOf="@+id/bottom_guideline4"
                    android:background="@drawable/pick_up_arc">
<!--                    android:text="重庆理工大学两江校区西门菜鸟驿站"-->
<!--                    android:text="怡园支路65号"-->
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="3dp"
                        android:textColor="#222222"
                        android:id="@+id/site_name"/>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="3dp"
                       android:id="@+id/site_address"
                        android:textColor="#888888"/>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="3dp"
                        android:text="联系站长"
                        android:textColor="#0D92F0"/>
                </LinearLayout>
                <!--        站点2-->
<!--                android:text="理工大学两江校区菜鸟驿站"-->
<!--                android:text="普福大道459号重庆理工大学两江校区"-->
                <LinearLayout
                    android:layout_marginTop="5dp"
                    android:paddingLeft="10dp"
                    android:layout_width="match_parent"
                    android:orientation="vertical"
                    android:layout_height="0dp"
                    app:layout_constraintTop_toTopOf="@+id/top_guideline5"
                    app:layout_constraintBottom_toBottomOf="@+id/bottom_guideline5"
                    android:background="@drawable/pick_up_arc">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="3dp"
                        android:id="@+id/site_name2"
                        android:textColor="#222222"/>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="3dp"
                        android:id="@+id/site_address2"
                        android:textColor="#888888"/>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="3dp"
                        android:text="联系站长"
                        android:textColor="#0D92F0"/>
                </LinearLayout>
                <!--        站点3-->
<!--                android:text="两江新区佳美布艺经营部"-->
<!--                android:text="重庆市重庆市渝北区龙兴镇怡园支路95号"-->
                <LinearLayout
                    android:layout_marginTop="5dp"
                    android:paddingLeft="10dp"
                    android:layout_width="match_parent"
                    android:orientation="vertical"
                    android:layout_height="0dp"
                    app:layout_constraintTop_toTopOf="@+id/top_guideline6"
                    app:layout_constraintBottom_toBottomOf="@+id/bottom_guideline6"
                    android:background="@drawable/pick_up_arc">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="3dp"
                        android:id="@+id/site_name3"
                        android:textColor="#222222"/>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="3dp"
                        android:id="@+id/site_address3"
                        android:textColor="#888888"/>

                </LinearLayout>

            </androidx.constraintlayout.widget.ConstraintLayout>


        </LinearLayout>

<!--        底部导航栏-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layout_constraintTop_toTopOf="@+id/top_pick_up"
            app:layout_constraintBottom_toBottomOf="@+id/bottom_pick_up"
            android:background="#ffffff">

            <androidx.constraintlayout.widget.ConstraintLayout

                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <androidx.constraintlayout.widget.Guideline
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/left_pick_up1"
                    app:layout_constraintGuide_percent=".07"
                    android:orientation="vertical"/>

                <androidx.constraintlayout.widget.Guideline
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/right_pick_up1"
                    app:layout_constraintGuide_percent=".17"
                    android:orientation="vertical"/>

                <androidx.constraintlayout.widget.Guideline
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/left_pick_up2"
                    app:layout_constraintGuide_percent=".24"
                    android:orientation="vertical"/>

                <androidx.constraintlayout.widget.Guideline
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/right_pick_up2"
                    app:layout_constraintGuide_percent=".34"
                    android:orientation="vertical"/>

                <androidx.constraintlayout.widget.Guideline
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/left_pick_up3"
                    app:layout_constraintGuide_percent=".41"
                    android:orientation="vertical"/>

                <androidx.constraintlayout.widget.Guideline
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/right_pick_up3"
                    app:layout_constraintGuide_percent=".61"
                    android:orientation="vertical"/>

                <androidx.constraintlayout.widget.Guideline
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/left_pick_up4"
                    app:layout_constraintGuide_percent=".68"
                    android:orientation="vertical"/>

                <androidx.constraintlayout.widget.Guideline
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/right_pick_up4"
                    app:layout_constraintGuide_percent=".80"
                    android:orientation="vertical"/>

                <androidx.constraintlayout.widget.Guideline
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/left_pick_up5"
                    app:layout_constraintGuide_percent=".87"
                    android:orientation="vertical"/>

                <androidx.constraintlayout.widget.Guideline
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/right_pick_up5"
                    app:layout_constraintGuide_percent=".97"
                    android:orientation="vertical"/>

<!--                首页-->
                <LinearLayout
                    android:id="@+id/pick_up_home"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    app:layout_constraintLeft_toLeftOf="@+id/left_pick_up1"
                    app:layout_constraintRight_toRightOf="@+id/right_pick_up1"
                    android:orientation = "vertical"
                   >
                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:src="@mipmap/pick_up_home_page"/>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="-10dp"
                        android:gravity="center"
                        android:text="首页" />

                </LinearLayout>

<!--                取件-->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    app:layout_constraintLeft_toLeftOf="@+id/left_pick_up2"
                    app:layout_constraintRight_toRightOf="@+id/right_pick_up2"
                    android:orientation = "vertical"
                    >
                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:src="@mipmap/pick_up_pick_up"/>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="-10dp"
                        android:gravity="center"
                        android:text="取件" />

                </LinearLayout>

<!--                寄件-->
                <LinearLayout
                    android:id="@+id/pick_up_mailPage"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    app:layout_constraintLeft_toLeftOf="@+id/left_pick_up3"
                    app:layout_constraintRight_toRightOf="@+id/right_pick_up3"
                    android:orientation = "vertical"
                    >
                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:src="@mipmap/pick_up_mail"/>

                </LinearLayout>

<!--                裹裹购-->
                <LinearLayout
                    android:id="@+id/pick_up_shop"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    app:layout_constraintLeft_toLeftOf="@+id/left_pick_up4"
                    app:layout_constraintRight_toRightOf="@+id/right_pick_up4"
                    android:orientation = "vertical"
                    >
                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:src="@mipmap/pick_up_shopping"/>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="-10dp"
                        android:gravity="center"
                        android:text="裹裹购" />

                </LinearLayout>

<!--                我的-->
                <LinearLayout
                    android:id="@+id/pick_up_my"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    app:layout_constraintLeft_toLeftOf="@+id/left_pick_up5"
                    app:layout_constraintRight_toRightOf="@+id/right_pick_up5"
                    android:orientation = "vertical"
                    >
                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:src="@mipmap/pick_up_me"/>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="-10dp"
                        android:gravity="center"
                        android:text="我的" />

                </LinearLayout>

            </androidx.constraintlayout.widget.ConstraintLayout>

        </LinearLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>


</LinearLayout>